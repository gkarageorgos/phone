@model List<PhoneBook.Models.PhoneCode>

<h1>Λιστα με τους κωδικούς</h1>

<a class ="btn btn-success mb-3" asp-controller="PhoneCode" asp-Action="Create">Δημιούργησε νέο κωδικό</a>

@if (Model.Count==0)
{
    <p>Δεν υπάρχουν κωδικοί τηλεφώνου</p>
}
else
{
    <table class="table">

        <thead>
            <tr>
                <th>Κωδικός Τηλεφώνου</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var phoneCode in Model)
            {
                <tr>
                    <td>@phoneCode.Name</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="PhoneCode" asp-action="Edit" asp-route-id="@phoneCode.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="PhoneCode" asp-action="Delete" asp-route-id="@phoneCode.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}